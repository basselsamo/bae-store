<!-- views/products.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script>
        function selectSize(productId, size) {
            document.querySelectorAll(`.size-option[data-product-id="${productId}"]`).forEach(option => {
                option.classList.remove('selected');
            });
            document.querySelector(`.size-option[data-product-id="${productId}"][data-size="${size}"]`).classList.add('selected');
            document.querySelector(`#size-${productId}`).value = size;
        }
    </script>
</head>
<body>
    <%- include('partials/in-header', {title: 'Products'}) %>
    <div class="container">
    <aside class="sidebar">
        <ul class="nav">
            <h2>Filter Products</h2>
            <p>No filters to apply yet.</p>
            <!-- <li><a href="/account/orders"><i class="fas fa-box"></i>Recent Orders</a></li>
            <li><a href="/account/returns"><i class="fas fa-undo"></i>Recent Returns</a></li>
            <li><a href="/account/favorites"><i class="fas fa-heart"></i>Favorite Products</a></li>
            <li><a href="/account/details"><i class="fas fa-user-circle"></i>Personal Details</a></li>
            <li><a href="/account/settings"><i class="fas fa-cog"></i>Account Settings</a></li>
            <li><a href="/logout"><i class="fas fa-sign-out-alt"></i>Logout</a></li> -->
        </ul>
    </aside>
    <main class="main-content">
    <h1>Products</h1>
    <div class="product-grid">
        <% products.forEach(product => { 
            const inStock = product.productSizesStock.some(sizeStock => sizeStock.stock > 0);
        %>
            <div class="product-card">
                <img src="<%= product.productImages[0] %>" alt="<%= product.productBrand %>" class="brand">
                <img src="<%= product.productImages[1] %>" alt="<%= product.productTitle %>" class="item">
                <h3><%= product.productTitle %></h3>
                <p>Price: â‚¬<%= product.productPrice.toFixed(2) %></p>
                <p>
                    <span class="<%= inStock ? 'available' : 'not-available' %>">
                        <%= inStock ? 'In Stock' : 'Out Of Stock' %>
                    </span>
                </p>
                <form action="/basket" method="POST" class="basket-form">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <input type="hidden" name="size" id="size-<%= product._id %>" value="">
                    <div class="size-options">
                        <% product.productSizesStock.forEach(sizeStock => { %>
                            <div 
                                class="size-option <%= sizeStock.stock > 0 ? '' : 'disabled' %>" 
                                data-product-id="<%= product._id %>" 
                                data-size="<%= sizeStock.size %>"
                                <% if (sizeStock.stock > 0) { %>
                                    onclick="selectSize('<%= product._id %>', '<%= sizeStock.size %>')"
                                <% } %>>
                                <%= sizeStock.size %>
                            </div>
                        <% }) %>
                    </div>
                    <div class="sub-buttons">
                    <button type="submit" <%= inStock ? '' : 'disabled' %>> <i class="fas fa-cart-plus"></i> ADD TO CART</button>
                    <div class="fav-item">
                        <button type="submit" class="fas fa-heart"></button>
                    </div>
                </div>
                </form>
            </div>
        <% }) %>
    </div>
</main>
</div>
    <%- include('partials/footer') %>
</body>
</html>
