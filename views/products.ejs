<!-- views/products.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('partials/header', {title: 'Products'}) %>
    <h1>Products</h1>
    <div class="product-grid">
        <% products.forEach(product => { %>
            <div class="product-card">
                <img src="<%= product.productImages[0] %>" alt="<%= product.productTitle %>">
                <h3><%= product.productTitle %></h3>
                <p>Price: â‚¬<%= product.productPrice.toFixed(2) %></p>
                <p>
                    <span class="<%= product.productAvailability ? 'available' : 'not-available' %>">
                        <%= product.productAvailability ? 'In Stock' : 'Out Of Stock' %>
                    </span>
                </p>
                <form action="/basket" method="POST" class="basket-form">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <label for="quantity-<%= product._id %>">Qty:</label>
                    <input type="number" name="quantity" id="quantity-<%= product._id %>" min="1" value="1" <%= product.productAvailability ? '' : 'disabled' %>>
                    <button type="submit" class="fas fa-cart-plus" <%= product.productAvailability ? '' : 'disabled' %>></button>
                </form>
            </div>
        <% }) %>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
